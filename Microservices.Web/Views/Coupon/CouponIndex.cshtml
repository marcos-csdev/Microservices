@model IList<CouponDto>
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h1 class="text-white">Coupons List</h1>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6">
            </div>

            <div class="col-6 text-end">
                <a class="btn btn-outline-primary" asp-area="" asp-controller="Coupon" asp-action="CouponCreate"><i class="bi bi-plus-square"></i> Create New Coupon</a>

            </div>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Coupon Code
                    </th>
                    <th>
                        Discount Amount
                    </th>
                    <th>
                        Minimum Expense
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {

                    <tr>
                        <td>
                            @item.CouponCode
                        </td>
                        <td>
                            @item.Discount.ToString("c")
                        </td>
                        <td>
                            @item.MinExpense
                        </td>
                        <td>
                            <a class="btn btn-danger" asp-action="CouponRemove" asp-route-couponId="@item.Id">
                                <i class="bi bi-trash"></i>
                            </a>
                        </td>
                    </tr>

                }

            </tbody>
        </table>

    </div>

</div>